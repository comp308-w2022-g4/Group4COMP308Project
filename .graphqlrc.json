{
  "$schema": "https://unpkg.com/graphql-config@4.3.0/config-schema.json",
  "schema": "schema.graphql",
  "documents": ["client/src/**/*.js"],
  "exclude": ["*.gen.d.ts"],
  "extensions": {
    "codegen": {
      "config": {
        "enumsAsConst": true
      },
      "generates": {
        "server/graphql/resolvers.gen.d.ts": {
          "plugins": [
            "typescript",
            "typescript-resolvers",
            {
              "add": {
                "placement": "prepend",
                "content": ["import { ResolverToRootValues } from './utils';"]
              }
            },
            {
              "add": {
                "placement": "append",
                "content": [
                  "export type RootValue =",
                  "  & ResolverToRootValues<QueryResolvers>",
                  "  & ResolverToRootValues<MutationResolvers>;"
                ]
              }
            }
          ],
          "config": {
            "contextType": "express#Request",
            "mappers": {
              "User": "../models/user.model#UserDoc"
            }
          }
        },
        "client/src/graphql.gen.d.ts": {
          "plugins": [
            "typescript",
            "typescript-operations",
            "typed-document-node"
          ]
        }
      }
    }
  }
}
